<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">

	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j.properties</param-value>
	</context-param>
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>60000</param-value>
	</context-param>
	<context-param>
		<param-name>log4jExposeWebAppRoot</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:contexts/applicationContext.xml,classpath:contexts/cacheContext.xml,classpath:contexts/calendarAccounts-ldap.xml,classpath:contexts/security.xml,classpath:contexts/chubClientContext.xml
		</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<servlet>
        <servlet-name>shareurl</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
		<servlet-name>shareurl</servlet-name>
		<url-pattern>*.html</url-pattern>
		<url-pattern>/u/*</url-pattern>
        <url-pattern>/freebusy/*</url-pattern>
        <!-- search view -->
        <url-pattern>/search</url-pattern>
        <!-- landing post-login -->
        <url-pattern>/my-shares</url-pattern>
        <!-- webflow to manage a share -->
        <url-pattern>/manage</url-pattern>
        <!-- parent path for shareurl management REST API -->
		<url-pattern>/rest/*</url-pattern>
		<!-- login controllers -->
		<url-pattern>/security_check</url-pattern>
		<url-pattern>/mailplus_security_check</url-pattern>
		<url-pattern>/delegate_switch_user</url-pattern>
		<url-pattern>/delegate_switch_exit</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<servlet-name>shareurl</servlet-name>
		<url-pattern>/security_check</url-pattern>
		<url-pattern>/mailplus_security_check</url-pattern>
		<url-pattern>/delegate_switch_user</url-pattern>
		<url-pattern>/delegate_switch_exit</url-pattern>
	</filter-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<error-page>
		<error-code>404</error-code>
		<location>/error-404.jsp</location>
	</error-page>
	<session-config>
		<session-timeout>20</session-timeout>
	</session-config>

	<jsp-config>
		<taglib>
			<taglib-uri>/oevent</taglib-uri>
			<taglib-location>
				/WEB-INF/tld/oevent.tld
			</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>/viewhelper</taglib-uri>
			<taglib-location>
				/WEB-INF/tld/viewhelper.tld
			</taglib-location>
		</taglib>
	</jsp-config>
</web-app>
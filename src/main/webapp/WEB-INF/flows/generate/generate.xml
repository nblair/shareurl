<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<on-start>
		<set name="flowScope.sharePreferences" value="new edu.wisc.wisccal.shareurl.domain.SharePreferences()"/>
	</on-start>

	<view-state id="generate-step1">
		<transition on="freeBusyOnly" to="review">
			<evaluate expression="flowScope.sharePreferences.addPreference(new edu.wisc.wisccal.shareurl.domain.FreeBusyPreference())"/>
		</transition>
    	<transition on="filtered" to="event-filters">
    		<set name="flowScope.formBackingObject" value="new edu.wisc.wisccal.shareurl.web.ShareFilterFormBackingObject()"/>
    	</transition>
    	<transition on="full" to="review">
    		<set name="flowScope.formBackingObject" value="new edu.wisc.wisccal.shareurl.web.ShareFilterFormBackingObject()"/>
    	</transition>
    	<transition on="cancel" to="end" history="invalidate"/>
	</view-state>
	
	<view-state id="event-filters" model="formBackingObject">
		<on-entry>
			<set name="flowScope.formBackingObject" value="new edu.wisc.wisccal.shareurl.web.ShareFilterFormBackingObject()"/>
		</on-entry>
		<transition on="clearFilters" to="event-filters">
			<set name="flowScope.formBackingObject" value="new edu.wisc.wisccal.shareurl.web.ShareFilterFormBackingObject()"/>
		</transition>
		<transition on="addPreference" to="event-filters">
			<evaluate expression="flowScope.sharePreferences.addPreference(new edu.wisc.wisccal.shareurl.domain.PropertyMatchPreference(formBackingObject.propertyName,formBackingObject.propertyValue))"/>
		</transition>
		<transition on="addPublic" to="event-filters">
			<evaluate expression="flowScope.sharePreferences.addPreference(flowHelper.newClassPublicPreference())"/>
		</transition>
		<transition on="addConfidential" to="event-filters">
			<evaluate expression="flowScope.sharePreferences.addPreference(flowHelper.newClassConfidentialPreference())"/>
		</transition>
		<transition on="addPrivate" to="event-filters">
			<evaluate expression="flowScope.sharePreferences.addPreference(flowHelper.newClassPrivatePreference())"/>
		</transition>
		<transition on="optionsComplete" to="review"/>
		<transition on="cancel" to="end" history="invalidate"/>
	</view-state>
	
	<view-state id="review">
		<transition on="generate" to="end" history="invalidate">
			<evaluate expression="flowHelper.generateNewShare(flowScope.sharePreferences)"/>
		</transition>
		<transition on="cancel" to="end" history="invalidate"/>
	</view-state>
	
	<end-state id="end" view="externalRedirect:contextRelative:/my-shares"/>
</flow>

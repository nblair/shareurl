<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
          
    <on-start>
    	<set name="flowScope.command" value="new edu.wisc.wisccal.migration.web.DelegateAccountSearchFormBackingObject()"/>
    </on-start>                
	<view-state id="search" model="flowScope.command">
		<transition on="attemptLogin" to="login">
			<set name="flowScope.targetDelegate" value="delegateLoginHelper.getDelegate(flowScope.command.delegateName)"/>
		</transition>
	</view-state>      
  
  	<action-state id="login">
  		<evaluate expression="delegateLoginHelper.loginAsDelegate(flowScope.targetDelegate)"/>
  		<transition on="failure" to="delegate-not-found"/>
  		<transition on="success" to="end"/>
  	</action-state>
	
	<end-state id="delegate-not-found" view="delegate-not-found.jsp"/>
	<end-state id="end" view="externalRedirect:contextRelative:/export.html"/>
</flow>
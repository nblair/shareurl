	<bean id="credentialsProviderFactory" class="org.jasig.schedassist.impl.caldav.oracle.OracleCommsCredentialsProviderFactoryImpl"/>

	<bean id="caldavAdminAuthScope" class="org.apache.http.auth.AuthScope">
		<constructor-arg index="0">
			<value>${caldav.admin.authscope.host}</value>
		</constructor-arg>
		<constructor-arg index="1">
			<value>${caldav.admin.authscope.port}</value>
		</constructor-arg>
		<constructor-arg index="2">
			<value>${caldav.admin.authscope.realm}</value>
		</constructor-arg>
		<constructor-arg index="3" value="BASIC" />
	</bean>
	<bean id="httpHost" class="org.apache.http.HttpHost">
		<constructor-arg index="0"
			value="${caldav.admin.authscope.host}" />
		<constructor-arg index="1"
			value="${caldav.admin.authscope.port}" />
		<constructor-arg index="2" value="${caldav.host.scheme}" />
	</bean>
	
	<bean id="schemeRegistry"
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="staticMethod"
			value="org.jasig.schedassist.impl.caldav.SchemeRegistryProvider.createSchemeRegistry" />
		<property name="arguments">
			<array>
				<value>${caldav.host.scheme}</value>
				<value>${caldav.admin.authscope.port}</value>
				<value>${caldav.host.ssl:false}</value>
			</array>
		</property>
	</bean>
	<bean id="clientConnectionManager"
		class="org.apache.http.impl.conn.tsccm.ThreadSafeClientConnManager">
		<constructor-arg ref="schemeRegistry" />
		<constructor-arg index="1"
			value="${caldav.http.connectionTimeout}" />
		<constructor-arg index="2" value="MILLISECONDS" />
		<property name="defaultMaxPerRoute" value="${caldav.http.defaultMaxConnectionsPerHost}" />
		<property name="maxTotal" value="${caldav.http.maxTotalConnections}" />
	</bean>
	<bean id="httpClient" class="org.apache.http.impl.client.DefaultHttpClient">
		<constructor-arg ref="clientConnectionManager" />
	</bean>


</beans>

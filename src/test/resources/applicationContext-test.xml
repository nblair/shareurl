	<bean id="caldavHost" class="java.net.URI">
		<constructor-arg>
			<value>${caldav.host}</value>
		</constructor-arg>
	</bean>
	<bean id="caldavDialect"
		class="org.jasig.schedassist.impl.caldav.oracle.OracleCommsCaldavDialectImpl">
		<property name="accountHomePrefix" value="${caldav.dialect.accountHomePrefix}" />
		<property name="accountHomeSuffix" value="${caldav.dialect.accountHomeSuffix}" />
		<property name="caldavHost" ref="caldavHost" />
		<!-- eventUtils is not used, but need a reference -->
		<property name="eventUtils">
			<bean class="org.jasig.schedassist.model.DefaultEventUtilsImpl">
				<constructor-arg>
					<bean class="org.jasig.schedassist.NullAffiliationSourceImpl" />
				</constructor-arg>
			</bean>
		</property>
	</bean>

